<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:d="http://xamarin.com/schemas/2014/forms/design" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="EssentialsSample.MainPage">
    <StackLayout Orientation="Vertical" VerticalOptions="FillAndExpand">
        <Button
            HorizontalOptions="FillAndExpand"
            VerticalOptions="Center"
            Text="Probar conexión"
            Clicked="Handle_Clicked"
            ></Button>

        <Button HorizontalOptions="FillAndExpand"
                VerticalOptions="Center"
                Text="Obtener coordenadas"
                Clicked="Handle_Clicked2"
                ></Button>
        <Label
            FontSize="Large"
            HorizontalTextAlignment="Center"
            TextColor="White"
            BackgroundColor="Red"
            VerticalOptions="EndAndExpand"
            HorizontalOptions="FillAndExpand"
            Opacity="0"
            Text="Perdiste la conexíon a internet"
            x:Name="labelAlert"/>
    </StackLayout>
</ContentPage>